mixin nav()
    script(src="/static/js/nav.js")
    nav.navbar.navbar-default
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/') Ghibli Garden
            #navbar.collapse.navbar-collapse
                ul.nav.navbar-nav
                    li.list-item
                        a.nav-btn(href="/") Home
                    li.list-item
                        a#nav-btn-films(href="/films")
                            | Films
                    li.list-item
                        a#nav-btn-films(href="/people")
                            | People
                ul.nav.navbar-nav.navbar-right
                    if user
                        li.list-item
                            a(href='/auth/sign-out') Logout, #{user.name}
                    else
                        li.list-item
                            a(href='/auth/sign-up') Register
                        li.list-item
                            a(href='/auth/sign-in') Login

