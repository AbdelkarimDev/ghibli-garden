mixin nav()
    nav.navbar.navbar-default
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/') Ghibli Garden
            #navbar.collapse.navbar-collapse
                ul.nav.navbar-nav
                    li.list-item
                        a(href="/films", id="nav-btn-films")
                            | Films
                    li.list-item
                        a(href="/people")
                            | People
                    li.list-item
                        a(href="/locations")
                            | Locations
                    li.list-item
                        a(href="/species")
                            | Species
                    li.list-item
                        a(href="/vehicles")
                            | Vehicles
                    li.list-item
                        a(href="/chat")
                            | Chat
                ul.nav.navbar-nav.navbar-right
                    if user
                        li.list-item
                            a(href='/auth/sign-out') Logout, #{user.name}
                    else
                        li.list-item
                            a(href='/auth/sign-up', id="sign-up") Register
                        li.list-item
                            a(href='/auth/sign-in') Login

