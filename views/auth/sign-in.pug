extends ../_shared/_master

block content
    div.container.container-register
        h3 Login
        form.form-sign-in(method='POST', action='/auth/sign-in')
            .form-group
                label Username:
                input.form-control(name='username', type='text')
            .form-group
                label Password:
                input.form-control(name='password', type='password')
            br
            input.btn.btn-primary(type='submit', value='Submit')
